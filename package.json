{
  "name": "portfolio-tracker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node ./scripts/check-pricing-env.js",
    "tsc": "tsc --noEmit",
    "dev:sync": "prisma db pull && prisma generate && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "prepare": "husky",
    "test": "jest --runInBand",
    "check:env": "node ./scripts/verify-env.js",
    "test:all": "jest --runInBand",
    "test:db": "SET SKIP_DB_TESTS=false&& jest --runInBand database-cache.adapter.test",
    "test:load": "node ./load-tests/run.js",
    "test:load:report": "artillery report load-tests/report-*.json -o load-tests/latest-report.html && echo \"Report generated: load-tests/latest-report.html\"",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:ui": "playwright test --ui",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:sync": "prisma db pull && prisma generate",
    "db:studio": "prisma studio"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "@prisma/client": "^6.19.0",
    "@stripe/stripe-js": "^8.5.3",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.84.0",
    "@tanstack/react-query": "^5.90.11",
    "@upstash/redis": "^1.35.7",
    "@vercel/kv": "^3.0.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.7.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.36.0",
    "idb": "^8.0.0",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.554.0",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "postcss": "^8.4.31",
    "prisma": "^6.19.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "recharts": "^2.12.7",
    "redis": "^5.9.0",
    "stripe": "^20.0.0",
    "tailwindcss": "^3.4.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "artillery": "^2.0.27",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "type": "module"
}
